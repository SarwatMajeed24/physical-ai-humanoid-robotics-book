{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/"
      ],
      "startServerCommand": "npm run serve",
      "startServerReadyPattern": "Serving docs at",
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "maxWaitForFcp": 15000,
        "maxWaitForLoad": 30000
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "accessibility": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "best-practices": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "seo": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "first-contentful-paint": [
          "error",
          {
            "maxNumericValue": 1500
          }
        ],
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2500
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1
          }
        ],
        "total-blocking-time": [
          "error",
          {
            "maxNumericValue": 200
          }
        ],
        "speed-index": [
          "error",
          {
            "maxNumericValue": 3000
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}